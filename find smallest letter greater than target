class Solution {
    public char nextGreatestLetter(char[] letters, char target) {
        int n=letters.length;
        
        if(target< letters[0] || target>=letters[n-1]) return letters[0];

        int R=n-1;
        int L=0;
        while(L+1<R){
            int mid=L + (R-L)/2;
            if(letters[mid]<= target){
                L=mid;
                
            }else{
                R=mid;
            }
        }
        return letters[R];
    }
}
