public class Solution {
    public List<Integer> powerfulIntegers(int x, int y, int bound) {
        Set<Integer> set = new HashSet<>();
        int a = 1;
        for (int i = 0; a <= bound; i++) {
            int b = 1;
            for (int j = 0; a + b <= bound; j++) {
                set.add(a + b);
                if (y == 1) break;
                b *= y;
            }
            if (x == 1) break;
            a *= x;
        }
        return new ArrayList<>(set);
    }
}
