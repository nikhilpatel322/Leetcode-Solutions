class Solution {
    public int searchInsert(int[] nums, int target) {
        int left=0;
        int right=nums.length-1;
        int val;
        while(left<=right){
            val=left+(right-left)/2;
            if(nums[val]==target){
                return val;
            }
            if(nums[val]<target){
                left= val+1;
            }else{
                right=val-1;
            }

        }
        return left;
        
    }
}
